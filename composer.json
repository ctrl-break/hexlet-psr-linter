{
    "name": "ctrl-break/hexlet-psr-linter",
    "type": "library",
    "description": "PHP PSR linter library",
    "authors": [
        {
            "name": "Alexander Bashenin",
            "email": "ctrl-break@mail.ru"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "squizlabs/php_codesniffer": "^2.6",
        "codeclimate/php-test-reporter": "^0.3.2"
    },
    "autoload": {
        "psr-4": {
          "HexletPsrLinter\\": "src/"
        }
    },
    "require": {
        "php": ">=7.0",
        "nikic/php-parser": "2.*",
        "lijinma/php-cli-color": "*",
        "psy/psysh": "*"
    },
    "bin": ["bin/psrlint"]
}
